    "mssql": "^6.2.3",
    "mysql": "^2.18.1",
    "mysql2": "^2.2.5",
    "oracledb": "^4.2.0",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.5.0",
    "sqlite3": "^4.2.0",
    "twit": "^2.2.11"
  },
